/* pages/projectlist/projectlist.wxss */
.allpage{
  height: 100%;
}
.findhead{
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  border-top: 1px solid #eeeeee;
  height: 100rpx;
}
.findhead view{
  color: #333;
  font-size: 16px;
  font-weight: normal;

}
.active{
  color: #38c3ff !important;
}
.botline{
  width: 24rpx;
  height: 6rpx;
  border-radius: 3px 3px;
  background: #38c3ff;
  text-align: center;
}
.hse text{
  display: block;
}
.hse .botline{
  opacity: 0;
}
.hse{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.active .botline{
  opacity: 1;
}

.prolists{
  margin-top: 20rpx;
}
.projectmsg{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 180rpx;
  padding: 0 20rpx;
  background: #fff;
  border-bottom: 1px solid #e6e6e6;
}
.projectname{
  display: flex;
  justify-content: flex-start;
}
.projectname image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  
  display: block;
}
.times text:first-child{
  font-size: 16px;
  color: #333;
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 450rpx;
  white-space: nowrap;
  display: block;
}
.times{
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.times text:nth-child(3),
.times text:nth-child(2){
  font-size: 12px;
  color: #666;
  font-weight: normal;
  display: block;
}
.status{
  font-size: 16px;
  color: #1aad19;
  font-weight: normal;
}
.btns{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100rpx;
  background: #fff;

}
.btns button{
  background: #fff;
  border-color: #ccc;
  border-radius: 5px;
  padding: 0;
  margin: 0;
  margin-right: 20rpx;
  font-size: 14px;
  color: #333;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}